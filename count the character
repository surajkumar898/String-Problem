class time {
    public static int total(String S){
    char [] a= S.toCharArray();
    int i; int count=0;
    for(i=0; i<a.length; i++){
        if(Character.isLetter(a[i])){
           count++;
           System.out.println (a[i] + " :" + count);
        }
    }
    return count; 
}
public static void main(String [] args){
    String S = "Hello";
    int result = total(S);
    System.out.println(result);
}
}
